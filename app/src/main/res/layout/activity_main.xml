<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ramzanullah.languagetranslator.MainActivity">

        <EditText
            android:id="@+id/etUserText"
            android:hint="Type Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="34dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tvTranslatedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="65dp"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/bTranslate"
            android:layout_alignStart="@+id/etUserText" />

        <Button
            android:id="@+id/bTranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translate"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/spinner"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="33dp"
            android:layout_below="@+id/etUserText"
            android:layout_alignEnd="@+id/etUserText" />


</RelativeLayout>
